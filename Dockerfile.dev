# Development Dockerfile for Analyzer Web
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy application code
COPY . .

# Generate Prisma Client
RUN npx prisma generate

# Expose port
EXPOSE 3000

# Start development server with hot-reloading
CMD [\"npm\", \"run\", \"dev\"]
